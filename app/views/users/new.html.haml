%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user) do |f|
        %header
          %h1 Register
        %fieldset
          =f.form_group do
            .row
              .col-sm-4= f.text_field :name, label: "Name"
            .row
              .col-sm-4= f.email_field :email, label: "Email Address"
            .row
              .col-sm-4= f.password_field :password, label: "Password"
        %fieldset.form-group.action
          %input(type="submit" value="Sign Up" class="btn btn-default")
