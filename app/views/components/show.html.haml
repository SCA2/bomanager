%article.component
  .container
    .row
      .col-sm-2.col-sm-offset-1
        =image_tag @component.image_url
      .col-sm-8
        %header
          %h3= @component.name
        %p= @component.description
        %article.form-group
          %table.table-striped.table-bordered#bom
            %thead
              %tr
                %th(width="20%") Name
                %th(width="10%") Revision
                %th(width="10%") Total Parts
                %th(width="10%") Price
            %tbody
              -@component.bom_items.each_with_index do |bom_item, index|
                -bom = bom_item.bom
                %tr
                  %td= link_to bom.name, bom
                  %td= bom.revision
                  %td= bom.total_parts
                  %td= bom.total
